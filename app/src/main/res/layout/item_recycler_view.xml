<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_item_recycler_view"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/login_item_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_item_recycler_view"
        android:layout_margin="16dp"/>

    <TextView
        android:id="@+id/text_item_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image_item_recycler_view"
        android:layout_below="@id/login_item_recycler_view"
        android:layout_marginLeft="16dp"
        />

</RelativeLayout>